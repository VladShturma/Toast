<?xml version="1.0" encoding="utf-8"?>
<!--лишний LinearLayout. Корневым элеметом можно сделать ScrollView-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRed">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/panther" />

            <!--в sp проставляется только размер текста. Все остальное в dp-->
            <TextView
                android:id="@+id/textViewTitle"
                android:text="@string/title_panther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
                <!--style="@style/TitleTheme"/>-->

            <TextView
                android:id="@+id/textView1"
                android:text="@string/about_panther1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textSize="16sp" />
                <!--style="@style/TextTheme"/>-->

            <TextView
                android:id="@+id/textView2"
                android:text="@string/about_panther2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textSize="16sp" />
            <!--style="@style/TextTheme"/>-->

            <TextView
                android:id="@+id/textView3"
                android:text="@string/about_panther3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textSize="16sp" />
            <!--style="@style/TextTheme"/>-->

            <TextView
                android:id="@+id/textView4"
                android:text="@string/about_panther4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textSize="16sp" />
            <!--style="@style/TextTheme"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Чтобы сделать одинаковые по ширине кнопки достаточно
                у всех трех указать ширину 0dp и weight = 1-->
                <Button
                    android:id="@+id/button1"
                    android:background="@color/colorRed"
                    android:text="@string/btn_panther"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack" />
                <!--style="@style/ButtonTheme"/>-->

                <Button
                    android:id="@+id/button2"
                    android:background="@color/colorGreen"
                    android:text="@string/btn_leopard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack" />
                <!--style="@style/ButtonTheme"/>-->

                <Button
                    android:id="@+id/button3"
                    android:background="@color/colorBlue"
                    android:text="@string/btn_lynx"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack" />
                <!--style="@style/ButtonTheme"/>-->

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>

